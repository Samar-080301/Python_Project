import string
import random
length=int(input("Enter the length of password: "))#asking the length  of input
characters=string.ascii_letters+string.digits+string.punctuation#adding all the elements
password= "".join(choice(characters)for x in range(length))#making a random password out of the elemaents stored in characters variable, the length of the password is fixed upto input length
print(password)#displaying the password
print(len(password)#confirming the password
